          "label": "Title"
      },
	  {
          "type": "text",
          "id": "detail",
          "label": "Detail"
      },
	  {
          "type": "text",
          "id": "btn",
          "label": "Button"
      },
      {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
      },
	  {
          "type": "select",
          "id": "alignment",
          "label": "Text alignment",
          "default": "center",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
