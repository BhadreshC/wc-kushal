            </svg>
          </a>
        </li>
      </ul>

      <ul class="w-100 d-md-block d-none">
        {% assign header = section.settings.menu %}
        {%- for link in linklists.header.links -%}
        {%- assign third_menu = false -%}

        {% if link.links != blank %}
        {% if link.levels == 2 %}
        {%- assign third_menu = true -%}
        {% endif %}
        {% endif %}

        {%- if link.links != blank -%}  
        {% if third_menu %}   
        <li class="mega_menu {% if link.active %}active{% endif %}">
          <a href="{{ link.url }}" class="main_menu">
            {{ link.title }}
          </a>
          {%- if link.links != blank -%}
          <ul class="child_menu">
            
            <li class="col-lg-6 {% if childlink.active %}active{% endif %}">
              {% for childlink in link.links %}
              <a href="{{ childlink.url }}" class="child_title">
                {{ childlink.title }}	
              </a>
              {%- if childlink.links != blank -%}
              <ul class="grand_child">
                {%- for grandchild in childlink.links -%}
                <li class="{% if grandchild.active %}active{% endif %}">
                  <a href="{{ grandchild.url }}">
                    {{ grandchild.title }}
                  </a>
                </li>
                {%- endfor -%}
              </ul>
              {%- endif -%}
              {%- endfor -%}
            </li>

            {%- for block in section.blocks -%}
            {%- assign block_title = block.settings.title | handle -%}
            {%- assign title = link.title | handle -%}
            {%- if title == block_title -%}
            <li class="col-lg-3 menu_img text-center">
              <figure class="m-0">
                <img src="{{ block.settings.image | img_url:'360x' }}" />
              </figure>
              <div class="menu_img_des text_{{ block.settings.alignment }}">
                {%- if block.settings.detail != '' -%}<p>{{ block.settings.detail }}</p>{%- endif -%}
                {%- if block.settings.btn != '' -%}<a href="#">{{ block.settings.btn }}</a>{%- endif -%}
              </div>
            </li>
            {%- endif -%}
            {%- endfor -%}
          </ul>
          {%- endif -%}
        </li>
        {%- endif -%}

        {%- else -%}
        <li class="single_menubar {% if link.active %}active{% endif %}">
          <a href="{{ link.url }}" class="main_menu">
            {{ link.title }}
          </a>
        </li>
        {%- endif -%}
        {% endfor %}
      </ul>

      {%- comment -%}
      <ul class="w-100 d-md-block d-none">
        {% assign header = section.settings.menu %}
        {%- for link in linklists.header.links -%}
        {%- assign third_menu = false -%}

